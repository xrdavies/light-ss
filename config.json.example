{
  "_comment": "Light Shadowsocks Client - JSON Configuration Example",

  "_name_comment": "Optional instance name for identification in logs and API responses",
  "name": "my-proxy",

  "shadowsocks": {
    "server": "example.com:8388",
    "method": "aes-128-gcm",
    "password": "your-password",
    "_comment_methods": "Supported cipher methods (auto-normalized to AEAD_ format):",
    "_supported_methods": [
      "aes-128-gcm",
      "aes-192-gcm",
      "aes-256-gcm",
      "chacha20-poly1305",
      "chacha20-ietf-poly1305",
      "xchacha20-poly1305"
    ],
    "timeout": 300,
    "_comment_plugin": "Simple-obfs plugin for traffic obfuscation - uncomment to enable:",
    "_plugin": "simple-obfs",
    "_plugin_opts": {
      "obfs": "http",
      "obfs-host": "www.bing.com"
    }
  },

  "_proxies_comment": "Proxies can be configured in two modes:",
  "_unified_mode": "Single port for both HTTP/HTTPS and SOCKS5 (like Clash)",
  "proxies": "127.0.0.1:1080",

  "_separate_mode_example": "Or use separate ports (comment out unified mode above to use this)",
  "_proxies_separate": {
    "http": "127.0.0.1:8080",
    "socks5": "127.0.0.1:1080",
    "_socks5_with_auth": "user:pass@127.0.0.1:1080"
  },

  "stats": {
    "enabled": true,
    "interval": 60
  },

  "logging": {
    "level": "info",
    "format": "text"
  },

  "_api_comment": "Management API Configuration (optional)",
  "api": {
    "enabled": false,
    "listen": "127.0.0.1:8090",
    "_token_comment": "Optional bearer token for authentication. If not set, no authentication is required",
    "_token": "your-secret-token-here"
  }
}
