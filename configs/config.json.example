{
  "_comment": "Light Shadowsocks Client - JSON Configuration Example",

  "shadowsocks": {
    "server": "example.com",
    "port": 8388,
    "method": "aes-128-gcm",
    "password": "your-password",
    "_supported_methods": [
      "aes-128-gcm",
      "aes-192-gcm",
      "aes-256-gcm",
      "chacha20-poly1305",
      "chacha20-ietf-poly1305"
    ],
    "timeout": 300,
    "_plugin_example": "Uncomment the lines below to enable simple-obfs plugin",
    "_plugin": "simple-obfs",
    "_plugin_opts": {
      "_obfs": "http or tls",
      "_obfs-host": "www.bing.com"
    }
  },

  "proxies": {
    "http": {
      "enabled": true,
      "listen": "127.0.0.1:8080"
    },
    "socks5": {
      "enabled": true,
      "listen": "127.0.0.1:1080"
    }
  },

  "stats": {
    "enabled": true,
    "interval": 60
  },

  "logging": {
    "level": "info",
    "format": "text"
  }
}
